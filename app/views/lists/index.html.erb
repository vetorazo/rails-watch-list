<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">My Watch Lists</h1>
        <%= link_to "Create new list", new_list_path, class: "btn btn-primary" %>
      </div>

      <% if @lists.any? %>
        <div class="row">
          <% @lists.each do |list| %>
            <div class="col-md-4 mb-3">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= list.name %></h5>
                  <p class="card-text text-muted">
                    <%= pluralize(list.movies.count, 'movie') %>
                  </p>
                  <%= link_to "View List", list_path(list), class: "btn btn-outline-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <h3 class="text-muted">No lists yet</h3>
          <p class="text-muted">Create your first watch list to get started!</p>
          <%= link_to "Create your first list", new_list_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
